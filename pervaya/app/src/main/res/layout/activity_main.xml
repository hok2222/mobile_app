<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="1906dp"
            android:layout_height="3490dp"
            tools:layout_editor_absoluteX="-90dp"
            tools:layout_editor_absoluteY="28dp">

            <TextView
                android:id="@+id/textViewHellow"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Hello World!"
                android:textSize="35sp"
                tools:layout_editor_absoluteX="212dp"
                tools:layout_editor_absoluteY="434dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIREAbutton"
                app:layout_constraintBottom_toTopOf="@+id/textViewHellow"
                app:layout_constraintEnd_toEndOf="@+id/textViewHellow"
                app:layout_constraintHorizontal_bias="0.463"
                app:layout_constraintStart_toStartOf="@+id/textViewHellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.911" />

            <TextView
                android:id="@+id/textViewStudent"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="New text in MIREA"
                android:textSize="35sp"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="152dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="268dp"
                android:text="CheckBox"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/textViewStudent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewStudent"
                app:layout_constraintVertical_bias="0.549" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Sharshov Ivan"
                android:textSize="35sp"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="560dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>